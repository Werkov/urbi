#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS
# Building in a builddir is way better for Urbi.
%:
	dh $@ --builddirectory=_build --parallel

#FIXME: dh_auto_configure overriding is considered as empty so we force
# it by putting configuring process as dependance of the building process.
build: override_dh_auto_configure
	dh build --builddirectory=_build --parallel

# Tests are done before building these packages. Skip it.
override_dh_auto_test:

# Prefixed by /usr to have a /usr/include, /usr/lib, ... architecture.
override_dh_auto_configure:
	mkdir -p _build && cd _build && ../configure --enable-doc --prefix=/usr CC='ccache gcc' CXX='ccache g++'
