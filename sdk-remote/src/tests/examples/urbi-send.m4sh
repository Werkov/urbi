                                                        -*- shell-script -*-
URBI_INIT

# Avoid zombies and preserve debugging information.
cleanup ()
{
  local exit_status=$?

  # Let a second C-c really kill us: restore default traps.
  trap - 0 1 2 13 15

  # In case we were caught by set -e, kill the children.
  children_kill    >>debug
  children_harvest >>debug

  rst_subsection "Debug outputs"
  rst_pre "debug" debug

  # Results: Only for the children that are not actually output.
  local i
  for i in $children
  do
    case $i in
      (*)
	rst_subsection "$i"
	children_report "$i"
	;;
    esac
  done

  case $exit_status in
    (0) exit_status=$(children_status);;
  esac

  error $exit_status "cleanup: exiting $exit_status$(ex_to_string $exit_status)"
}
trap cleanup 0

exec 3>&2
me=$as_me
medir=$(absolute "$0").dir
mkcd $medir

xrun "--help"    urbi-send$EXEEXT --help
xrun "--version" urbi-send$EXEEXT --version

# Send a file and check the output.

# Leaves trailing files, so run it in subdir.
find_urbi_server

# Start it.
spawn_urbi_server

cat >quit.u <<EOF
"PASS";
quit;
EOF

cat >shutdown.u <<EOF
"LAST";
shutdown;
EOF

cmd="$valgrind urbi-send$EXEEXT --port-file server.port"
cmd+=" -e '100+100;' -e '400*400;' -f quit.u"
echo "$cmd" >client1.cmd
eval "$cmd" >client1.out 2>client1.err &
children_register client1

children_wait 10 client1

cmd="$valgrind urbi-send$EXEEXT --port-file server.port"
cmd+=" -e 'var x = 0;at (x>5) echo(\"coucou\"); x = 7;' -f shutdown.u"
echo "$cmd" >client2.cmd
eval "$cmd" >client2.out 2>client2.err &
children_register client2

children_wait 10 client2

xrun "check" grep "200" client1.out
xrun "check" grep "160000" client1.out
xrun "check" grep "PASS" client1.out

xrun "check" grep "coucou" client2.out
xrun "check" grep "LAST" client2.out
