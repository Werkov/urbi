class Global.Lazy
{
  var code;
  var val;

  function init(value)
  {
    self.code = value
  };

  function eval()
  {
    updateVoidSlot("val", self.code)
  };

  function value()
  {
    if (getSlot("val").isNil)
      eval|
    getSlot("val")
  };

  function string ()
  {
    self.getSlot("code").bodyString
  };
};
