class Global.Lazy
{
  var code;
  var val;

  function init(value)
  {
    self.code = value |
    self
  };

  function eval()
  {
    val = self.code.acceptVoid
  };

  function value()
  {
    if (getSlot("val").isNil)
      eval|
    getSlot("val")
  };

  function string ()
  {
    self.getSlot("code").bodyString
  };
};
