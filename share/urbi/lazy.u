class Global.Lazy
{
  var code;
  var val;

  function init(value)
  {
    this.code = value |
    this
  };

  function eval()
  {
    val = code.acceptVoid|
    getSlot("val").unacceptVoid
  };

  function value()
  {
    if (getSlot("val").isVoid)
      eval|
    getSlot("val").unacceptVoid
  };

  function string ()
  {
    getSlot("code").bodyString
  };
};
