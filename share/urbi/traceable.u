requireFile("urbi/global.u");

package lang.Traceable
{
  var hideSystemFiles = true;

  var '$backtrace';

  function backtrace()
  {
    if ('$backtrace'.isVoid)
      []
    else if (!hideSystemFiles)
      '$backtrace'
    else
      '$backtrace'
        .filter(closure (sf) {
          sf.location.isNil || !sf.location.isSystemLocation
        })
  };
};
