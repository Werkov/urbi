class System.Platform
{
  var host = "@host@";
  var host_alias = "@host_alias@";
  var host_cpu = "@host_cpu@";
  var host_os = "@host_os@";
  var host_vendor = "@host_vendor@";
  var host_triplet = "@host@";

  function isWindows ()
  {
    return host_os == "mingw32";
  };

  function kind ()
  {
    if (isWindows)
      "WIN32"
    else
      "POSIX";
  };
};

