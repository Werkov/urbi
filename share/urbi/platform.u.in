class System.Platform
{
  var host = "@host@";
  var host_alias = "@host_alias@";
  var host_cpu = "@host_cpu@";
  var host_os = "@host_os@";
  var host_vendor = "@host_vendor@";
  var host_triplet = "@host@";

  function isWindows ()
  {
    return host_os == "mingw32";
  };

  function kind ()
  {
    if (isWindows)
      "WIN32"
    else
      "POSIX";
  };

  var compilation_mode_debug = @COMPILATION_MODE_DEBUG@;
  var compilation_mode_space = @COMPILATION_MODE_SPACE@;
  var compilation_mode_speed = @COMPILATION_MODE_SPEED@;
};
