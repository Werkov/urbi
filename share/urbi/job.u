requireFile("urbi/global.u");
requireFile("urbi/traceable.u");
requireFile("urbi/control.u");
requireFile("urbi/channel.u");

do (Job)
{
  addProto(Global.Traceable);

  function dumpState()
  {
    if (hasLocalSlot("name"))
      echo("Job: " + name)
    else
      echo("Job: " + uid)|
    echo("  State: " + status) |

    if (var t = timeShift)
      echo("  Time Shift: " + t + "ms") |

    if (var ts = tags)
    {
      echo("  Tags:") |
      for| (var t : tags)
        echo("    " + t);
    } |

    if (var b = backtrace)
    {
      echo("  Backtrace:") |
      for| (var l : b)
        echo("    " + l);
    }
  }
};
