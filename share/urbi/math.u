class Global.Math
{
  setProtos([Singleton]);

  for (var fn: ["abs", "acos", "asin", "atan", "cos", "exp", "log", "random",
               "round", "sgn", "sin", "sqr", "sqrt", "tan", "trunc"])
    setSlot(fn, bounce_named(fn));

  function atan2(x, y)
  {
    x.atan2(y)
  };

  function min
  {
    return call.evalArgs.min
  };

  function max
  {
    return call.evalArgs.max
  };

  for (var v: ["inf", "pi", "nan"])
    setSlot(v, Float.getSlot(v));
};
Global.addProto(Global.Math);
