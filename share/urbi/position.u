class Global.Position
{
  var file = nil;
  var line = 0;
  var column = 0;

  function init(f, l, c)
  {
    this.file = { if (f) Path.new(f) else f; };
    this.line = l;
    this.column = c;
  };

  function asString()
  {
    if (!file.isNil)
      file.asString + ":" + line + "." + column
    else
      "" + line + "." + column
  }
};
