function Global.UpdateHookStack (name, value)
{
  var myself = getProperty(name, "updateHook");
  var res = value;
  for (var hook: myself.hooks)
  {
    res = hook(name, res);
    if (res.isVoid)
      return value;
  };
  return res;
};

do getSlot("UpdateHookStack")
{
  var hooks = [];

  function addHook(f)
  {
    hooks << f;
  };
};
