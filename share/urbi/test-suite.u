/*-----------.
| Location.  |
`-----------*/

do (Location)
{
  function here(var backtrack = 0)
  {
    var list =
   {
      try { throw Exception.new("")}
      catch (var e) { e.'$backtrace' }
    }|
    var drop = true|
    var loc = nil|
    var i = 0|
    for| (i = 0; i < list.size && loc.isNil(); ++i)
    {
      if (drop)
        drop = drop && list[i].name != "here"|
      if (!drop && backtrack++ == 0)
        loc = list[i].location|
    }|
    loc
  }
}|;


/*--------.
| Range.  |
`--------*/

class Range : Container
{
  var first;
  var last;

  function init(var f, var l)
  {
    first = f|
    last = l;
  };

  function asString()
  {
    "[%s .. %s]" % [first, last]
  };

  function has(var e)
  {
    first <= e <= last
  };
}|;


