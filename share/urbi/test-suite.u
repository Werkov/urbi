/*---------.
| System.  |
`---------*/

do (System)
{
  const var Status = do (Object.new())
  {
    function stat(var name)
    {
      clog.enabled = false |
      var v = get(name) |
      assert { v[1] == "kB"; } |
      clog.enabled = true |
      v[0]
    };
  };

  function status()
  {
    skipIfWindows();
    var procStatus = Path.new("/") / "proc" / "self" / "status";
    if (!procStatus.exists)
      testSkip("No /proc/self/status");
    var is = InputStream.new(File.new(procStatus));
    var d = [ => ];
    var line;
    while (!(line = is.getLine()).isNil())
    {
      var l = line.split(":\t");
      try {
        d[l[0]] =
          l[1]
          .split(" ", 1024, false, false)
          .map(closure (v) { try { v.asFloat() } catch (var e) { v } })
      } 
      catch (var e)
      {
        d[l[0]] = l[1]
      }
    };
    d.addProto(Status)
  };

  function memCheck(var f, var loc = nil)
  {
    var judge_mode = false;
    var location = nil;

    var begMem = nil;
    var endBenchMem = nil;
    var endJudgeMem = nil;

    function mode() { if (judge_mode) "judge" else "bench" };

    var checker = do (Tag.new())
      {
        function onEnter()
        {
          begMem = System.status().stat("VmData");
          clog << "%s: %s: start with %d kB" % [location, mode(), begMem];
        };

        function onLeave()
        {
          // FIXME: trigger the garbage collection
          // sleep(100ms);

          var endMem = System.status().stat("VmData");
          clog << "%s: %s: leak %d kB" % [location, mode(), endMem - begMem];
          if (judge_mode)
          {
            endJudgeMem = endMem;
            assert { endJudgeMem <= endBenchMem; };
          }
          else
            endBenchMem = endMem;
        };
      };

    System.memCheck = function (var f, var loc = nil)
    {
      if (loc.isNil())
        loc = Location.here(-1);
      location = loc;

      judge_mode = false;
      checker: f();
      sleep(0);
      judge_mode = true;
      checker: f();
      sleep(0);
    };

    if (loc.isNil)
      loc = Location.here(-1);
    memCheck(f, loc);
  };

  // Check that spawn threads do not map too much space.
  function memThreadCheck(var expectedMem, var f, var loc = nil)
  {
    if (loc.isNil())
      loc = Location.here(-1);

    var beg = System.status().stat("VmData") |
    clog << "before thread: %d kB" % [beg] |

    memCheck(f, loc) |

    var end = System.status().stat("VmData") |
    clog << "after thread: %d kB" % [end] |

    // Ensure that the thread does not ask for more than 32 KB.
    assert { end - beg <= expectedMem; } |
  };

}|;


/*----------.
| Windows.  |
`----------*/

// Keep sync with urbivalid/test.u.
if (System.Platform.isWindows)
{
  package lang.Process
  {
    function init(var args[])
    {
      testSkip("Process is not supported under Windows")
    };
  };

  do (System)
  {
    // System.system.
    var binshs = ["/bin/sh", "/bin/sh.exe",
                  "\\cygwin\\bin\\sh", "\\cygwin\\bin\\sh.exe",
		  "Z:\\bin\\sh"];
    for (var p : binshs)
    {
      try
      {
        if (Path.new(p).exists)
        {
          var this.binsh = p;
          break;
        };
      }
      catch {}
    };
    if (!hasLocalSlot("binsh"))
      throw Exception.new("cannot find /bin/sh: " + binshs);

    var this.count = 1;

    // On Windows, use /bin/sh to please our tests.
    overrideSlot("system",
    function (command)
    {
      // For some reason I don't understand, the command is
      // backgrounded on Windows (or by Wine).  So use some stamp file
      // to mark the end of the command.  This also provides a means
      // to get the real exit status with Wine.
      var stamp = Path.new("%s.stamp" % count) |
      ++count |
      // As a subshell, not a subcommand ({ %s; }) so that if the
      // command includes an "exit", then the stamp file is really
      // created anyway with the right value.
      command = "( %s ); echo $? >%s" % [command, stamp]|

      // Escape all the quotes and backslashes, and call /bin/sh.
      var cmd = binsh + " -c \"" |
      for| (var c: command)
        cmd += {if (c in ["\\", "\""]) "\\" else ""} + c |
      cmd += "\"" |

      // Run the command, wait for the stamp.
      'system$old'(cmd) |
      while| (!stamp.exists)
        sleep(20ms)|
      var res = File.new(stamp).asList[0].asFloat |
      clog << ("system wrapper: " + command + ": " + cmd + ": " + res) |
      res
    });
  }
}|;
