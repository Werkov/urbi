var Lobby.systemLobby = this;
do (Lobby)
{
  var onDisconnect = Event.new;
  var connected = true;
  function asString()
  {
    var res = Object.getSlot("asString").apply([this]) |
    if (hasSlot("remoteIP"))
      res += " (%s)" % remoteIP |
    return res
  };
  function handleDisconnect()
  {
    connected = false |
    Lobby.systemLobby.send(("disconnecting " + this).asPrintable) |
    onDisconnect!(this)
  };
};
